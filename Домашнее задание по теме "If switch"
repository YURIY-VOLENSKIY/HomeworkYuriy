public class Main {
    public static void main(String[] args) {
    int x=8,y=2;
    if ((x % 2 == 0) & (y % 2 == 0)){
        System.out.println("Удачное совпадение - четные");
          } else if ((x % 2 != 0) & (y % 2 != 0)) {
        System.out.println("Удачное совпадение - нечетные");
        }
       }
    }
